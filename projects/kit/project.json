{
    "root": "projects/kit",
    "sourceRoot": "projects/kit/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/web:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "project": "projects/kit/package.json",
                "outputPath": "dist/kit",
                "entryFile": "projects/kit/src/index.ts",
                "tsConfig": "projects/kit/tsconfig.workaround.json",
                "format": ["esm", "umd"]
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "dependencies",
                    "params": "forward"
                }
            ]
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/kit"],
            "options": {
                "jestConfig": "projects/kit/jest.config.js",
                "passWithNoTests": true
            }
        },
        "publish": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "cp projects/kit/README.md dist/kit/README.md",
                    "ts-node ./scripts/npm-publish.ts --path ./dist/kit --dry-run {args.dry-run}"
                ]
            },
            "dependsOn": [
                {
                    "target": "build",
                    "projects": "self",
                    "params": "ignore"
                }
            ]
        }
    },
    "tags": []
}
